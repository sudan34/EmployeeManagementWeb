@model EmployeeManagementWeb.Models.ViewModel.ImageCreateModel
@{
    ViewData["Title"] = "UploadImage";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" asp-action="UploadImage" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div> 
                
                <div class="form-group">
                    <label asp-for="ImagePath"></label>
                    <input type="file" asp-for="ImagePath" class="form-control"/>
                    <span class="text-danger" asp-validation-for="ImagePath"></span>

                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-sm btn-outline-success float-end" />
                </div>
            </form>
        </div>
    </div>
</div>
