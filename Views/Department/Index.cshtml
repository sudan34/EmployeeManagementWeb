@using EmployeeManagementWeb.Utility;
@model IEnumerable<EmployeeManagementWeb.Models.Department>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <div style="float:right" class="text-light">
                <a class="btn btn-sm btn-warning m-1 p-1 text-light" asp-action="AddDepartment" asp-controller="Department">Add Department</a>
            </div>
            <table class="table table-bordered table-hover text-center">
                <thead class="bg-dark text-light">
                    <tr>
                        <th>Department Id</th>
                        <th>Department Name</th>
                        <th>Department Code</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>@d.DepartmentId</td>
                            <td>@Utilities.EveryFirstCharacterCapital(d.DepartmentName)</td>
                            <td>@d.DepartmentCode.ToUpper()</td>
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Department" asp-route-id="@d.DepartmentId">Edit</a>
                                <a class="btn btn-sm btn-info" asp-action="Details" asp-controller="Department" asp-route-id="@d.DepartmentId">Details</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Department" asp-route-id="@d.DepartmentId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a class="btn btn-sm btn-warning m-1 p-2" asp-action="Index" asp-controller="Dashboard">Back to Dashboard</a>
    </div>
</div>



