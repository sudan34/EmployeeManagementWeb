@model EmployeeManagementWeb.Models.Employee
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add Employee</h1>
                    <p class="text-center textalert-danger">@TempData["message"]</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-aciton="Create">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Enter Employee name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="City"></label>
                            <input type="text" asp-for="City" class="form-control" placeholder="Enter City name" />
                            <span asp-validation-for="City" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="State"></label>
                            <input type="text" asp-for="State" class="form-control" placeholder="Enter State" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Salary"></label>
                            <input type="text" asp-for="Salary" class="form-control" placeholder="Enter Employee Salary" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success float-end" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>